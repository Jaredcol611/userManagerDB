doctype html
html
    head
        title Users
    body

        table User List
            tr
                th
                    a(href=`/sortId`) User Id
                th
                    a(href=`/sortName`) Name
                th
                    a(href=`/sortEmail`) Email
                th
                    a(href=`/sortAge`) Age
            each user in users
                 tr
                     //td #{user._id}
                     td #{user.userId}
                     td #{user.name}
                     td #{user.email}
                     td #{user.age}
                     td
                        a(href=`/edit/` + user._id) edit
                     td
                        a(href='/delete/' + user._id) delete

        form(action='/add', method='get')
            button Add New User
