doctype html
html
    head
        title Users
    body

        table User List
            tr
                th
                    a(href=`/sortId`) User Id
                th
                    a(href=`/sortFirstName`) First Name
                th
                    a(href='/sortLastName') Last Name
                th
                    a(href=`/sortEmail`) Email
                th
                    a(href=`/sortAge`) Age
            each user in users
                 tr
                     //td #{user._id}
                     td #{user.userId}
                     td #{user.firstName}
                     td #{user.lastName}
                     td #{user.email}
                     td #{user.age}
                     td
                        a(href=`/edit/` + user._id) edit
                     td
                        a(href='/delete/' + user._id) delete

        form(action='/add', method='get')
            button Add New User

        form(action='/search', method='post')
            input(type='text', name="search", placeholder='Search by First Name')
            button Search

        form(action='/list', method='get')
            button Full List
