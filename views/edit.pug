doctype html
html
    head
        title Edit
    body
        form(method='POST', action=`/edit/` + user._id)
            div
                label(for='userId') User ID
                input(id='userId', name='userId', value= user.userId)
            div
                label(for='firstName') First Name
                input(id='firstName', name='firstName', value= user.firstName)
            div
                label(for='lastName') Last Name
                input(id='lastName', name='lastName', value= user.lastName)
            div
                label(for='email') Email
                input(id='email', name='email', value= user.email)
            div
                label(for='age') Age
                input(id='age', name='age', value= user.age)
            div
                input(type='submit', value='Edit User')
